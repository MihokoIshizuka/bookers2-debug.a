<table class="table table-hover table-inverse">
  
  <% if @range == "User" %>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <h2>Users search for "<%= params[:word] %>"</h2>
    <% @users.each do |user| %>
    <tr>
      <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
      <td><%= link_to user, class: "user_#{user.id}" do %>
          <%= user.name %>
          <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
  <% else %>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <h2>Books search for "<%= params[:word] %>"</h2>
  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
    <td><%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
    </td>
    <td><%= book.body %></td>
  </tr>
  </tbody>
  <% end %>
  <% end %>
</table>